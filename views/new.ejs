<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="preload"
      href="/fonts/ComicRelief-Regular.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link
      rel="preload"
      href="/fonts/Rajdhani-Medium.ttf"
      as="font"
      type="font/ttf"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/css/style.css" />
  </head>

  <body>
    <!-- HEADER -->
    <%- include("partials/_header.ejs") %>

    <!-- NEW MESSAGE FORM -->
    <main class="message-form">
      <h2>Create Pheromone to Release</h2>
      <form class="form" action="/message" method="post">
        <input type="hidden" name="name" value="<%= name %>" />
        <input type="hidden" name="role" value="<%= role %>" />

        <label for="topic" class="form-topic">
          1. Pick a Topic <span aria-hidden="true">*</span>
          <select name="topic" id="topic" required>
            <option value="" disabled selected>-- Choose a topic --</option>

            <% for (const topic of topics) { %>
            <option value="<%= topic %>"><%= topic %></option>
            <% } %>
          </select>
        </label>

        <label for="content" class="form-content">
          2. Message <span aria-hidden="true">*</span>
          <textarea
            name="content"
            id="content"
            required
            placeholder="..."
          ></textarea>
        </label>

        <a href="../" class="button form-return">Return to Trail</a>

        <button type="submit" class="button form-send">
          Release Pheromone
        </button>
      </form>

      <img
        src="/images/ant2-svgrepo-com.svg"
        alt=""
        width="100"
        height="auto"
      />

      <img src="/images/line-svgrepo.svg" alt="" width="120" height="auto" />
    </main>

    <!-- ASIDE -->
    <%- include("partials/_aside.ejs", {renderButton: false}) %>
  </body>
</html>
